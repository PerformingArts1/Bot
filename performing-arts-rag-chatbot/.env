# .env (at the root of your project)

# Ollama Settings
# These will be passed to the backend service
OLLAMA_HOST=http://ollama:11434 # This refers to the Ollama service within Docker Compose network
LLM_MODEL=llama2
EMBEDDING_MODEL=nomic-embed-text
LLM_TEMPERATURE=0.7
LLM_TOP_K=40
LLM_TOP_P=0.9

# Frontend Settings
# This will be passed to the React build process
REACT_APP_API_BASE_URL=http://localhost:5000 # Frontend will connect to backend via host port
